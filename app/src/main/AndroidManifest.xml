<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pooa20181.iff.edu.br.hearthstonetopdeck">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actTier1"
            android:label="@string/title_activity_act_tier1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".actTier2"
            android:label="@string/title_activity_act_tier2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".actTier3"
            android:label="@string/title_activity_act_tier3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DeckPriest"
            android:label="@string/title_activity_deck_priest"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>